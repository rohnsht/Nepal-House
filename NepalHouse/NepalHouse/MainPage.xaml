<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NepalHouse"
             x:Class="NepalHouse.MainPage">
    <NavigationPage Title="Home">
        <NavigationPage.Icon>
            <OnPlatform x:TypeArguments="FileImageSource"
                        iOS="ic_store.png"/>
        </NavigationPage.Icon>
        <x:Arguments>
            <local:HomePage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Search">
        <NavigationPage.Icon>
            <OnPlatform x:TypeArguments="FileImageSource"
                        iOS="ic_search.png"/>
        </NavigationPage.Icon>
        <x:Arguments>
            <local:SearchPage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Categories">
        <NavigationPage.Icon>
            <OnPlatform x:TypeArguments="FileImageSource"
                        iOS="ic_library_books.png"/>
        </NavigationPage.Icon>
        <x:Arguments>
            <local:CategoryPage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Cart">
        <NavigationPage.Icon>
            <OnPlatform x:TypeArguments="FileImageSource"
                        iOS="ic_shopping_cart.png"/>
        </NavigationPage.Icon>
        <x:Arguments>
            <local:CartPage/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>